            android:text="@string/hotel"
            android:textSize="15sp"
            android:layout_gravity="bottom"
            android:gravity="center_horizontal"
            android:fontFamily="@font/latomedium"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
